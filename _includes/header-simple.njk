<div class="lg:flex justify-center items-center">

    {# Desktop #}
    <header id="header" class="header--simple hidden lg:block fixed top-0 left-0 w-full right-0 transition-colors duration-200 z-10">

        <div class="container box-border flex flex-col justify-center sm:flex-row sm:flex-wrap items-center md:justify-between my-2">
            <a href="{{ '/' | url }}" class="">
                {% include "svg/logo.svg" %}
            </a>

            {% include "nav-simple.njk" %}

        </div>

    </header>

    {# Mobile #}
    <header id="header--mobile" class="lg:hidden bg-white pb-3 text-copy z-10">

        <div class="container box-border flex flex-col my-2">
            <div class="flex justify-between items-center">
                <a href="{{ '/' | url }}">
                    {% include "svg/logo.svg" %}
                </a>

                <button id="menu-btn" class="burger block bg-white w-8 h-8 rounded-none border-0 p-0 cursor-pointer transition-all">
                    {% include "svg/burger.svg" %}
                </button>
            </div>

            {% include "nav-mobile.njk" %}

        </div>

    </header>

</div>